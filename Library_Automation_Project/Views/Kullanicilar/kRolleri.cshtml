@model List<Library_Automation.Entities.Model.KullaniciRolleri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Users List
            </div>
            <div class="ibox-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <td>UserName</td>
                            <td>Roles</td>
                            <td>Operations</td>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@Html.DisplayFor(x => item.Id)</th>
                                <td>@Html.DisplayFor(x => item.KullaniciId)</td>
                                <td>@Html.DisplayFor(x => item.Roller.Rol)</td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", "Roller", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                                    @Html.ActionLink("Detail", "Detail", "Roller", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                                    @Html.ActionLink("Delete", "Delete", "Roller", new { id = item.Id }, new { @class = "btn btn-danger btn-sn btn-sm delete", onclick = "return confirm('Do you want to delete?')" })
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
                <div class="form-group">
                    @Html.ActionLink("New", "Add", "Roller", null, new { @class = "btn btn-success" })

                </div>
            </div>
        </div>
    </div>
</div>
