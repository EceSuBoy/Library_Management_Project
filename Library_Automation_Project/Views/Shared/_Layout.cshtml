<!DOCTYPE html>

<style>
    .bg-light-purple {
        background-color: #5C2B64 !important; /* light purple */
    }

    .navbar .nav-link,
    .navbar-brand,
    footer p {
        color: white !important;
    }

    .navbar .nav-link {
        color: white !important;
        transition: background-color 0.3s, color 0.3s;
        border-radius: 8px;
        padding: 8px 15px;
    }

        .navbar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .navbar .nav-link.active {
            background-color: #5b4cd1 !important; /* darker purple */
            font-weight: bold;
        }

    footer.bg-light-purple {
        border-top: 1px solid #764ba2;
    }
</style>


<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar navbar-expand-lg bg-light-purple">
        <div class="container px-5">
            <a class="navbar-brand" href="/">Library Automation</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Books" ? "active" : "")" href="/Books">Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "About" ? "active" : "")" href="/Home/About">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Contact" ? "active" : "")" href="/Home/Contact">Contacts</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Istatistikler" ? "active" : "")" href="/Istatistikler/Index/">Admin Panel</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />


    </div>
    <footer class="py-5 bg-light-purple">
        <p class="m-0 text-center text-white">Library Automation © 2025</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



    @Html.Partial("~/Views/Shared/_Chatbot.cshtml")

</body>
</html>



