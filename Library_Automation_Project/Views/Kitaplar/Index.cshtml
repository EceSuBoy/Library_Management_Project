@model List<Library_Automation.Entities.Model.Kitaplar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Book List
            </div>
            <div class="ibox-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <td>Book Genre</td>
                            <td>Bar Code</td>
                            <td>Book Name</td>
                            <td>Author</td>
                            <td>Date Added</td>
                            <td>Is Deleted?</td>
                            <td>Operations</td>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@Html.DisplayFor(x => item.Id)</th>
                                <td>@Html.DisplayFor(x => item.KitapTurleri.KitapTuru)</td>
                                <td>@Html.DisplayFor(x => item.BarkodNo)</td>
                                <td>@Html.DisplayFor(x => item.KitapAdi)</td>
                                <td>@Html.DisplayFor(x => item.Yazari)</td>
                                <td>@Html.DisplayFor(x => item.EklemeTarihi)</td>
                                <td>@Html.CheckBoxFor(x => item.SilindiMi)</td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                                    @Html.ActionLink("Detail", "Detail", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                                    <button class="btn btn-danger btn-sm"
                                            onclick="confirmDelete(@item.Id, '@item.KitapAdi', '@item.Yazari')">
                                        Delete
                                    </button>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
                @Html.Partial("_DeleteConfirmationModal", "Are you sure you want to delete this book?")

                <div class="form-group">
                    @Html.ActionLink("New", "Add", null, new { @class = "btn btn-success" })

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(bookId, bookName, authorName) {
            var form = document.getElementById("deleteForm");
            form.action = "/Kitaplar/DeleteConfirmed/" + bookId;

            var message = `Are you sure you want to delete the book: <strong>${bookName}</strong> by <strong>${authorName}</strong>?`;
            document.getElementById("deleteModalBody").innerHTML = message;

            $('#confirmDeleteModal').modal('show');
        }
    </script>
}