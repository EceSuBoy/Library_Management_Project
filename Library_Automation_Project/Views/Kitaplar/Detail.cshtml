@model Library_Automation.Entities.Model.Kitaplar

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <b>@Html.DisplayFor(x => x.Id) No of the Book's Information</b>
            </div>
            <div class="ibox-body">

                <div class="form-group">
                    <b>Book Genre :</b>
                    @Html.DisplayFor(x => x.KitapTurleri.KitapTuru)
                </div>

                <div class="form-group">
                    <b>Bar Code No :</b>
                    @Html.DisplayFor(x => x.BarkodNo)
                </div>

                <div class="form-group">
                    <b>Name of the Book :</b>
                    @Html.DisplayFor(x => x.KitapAdi)
                </div>

                <div class="form-group">
                    <b>Author :</b>
                    @Html.DisplayFor(x => x.Yazari)
                </div>

                <div class="form-group">
                    <b>Publishing House :</b>
                    @Html.DisplayFor(x => x.YayinEvi)
                </div>

                <div class="form-group">
                    <b>Stock :</b>
                    @Html.DisplayFor(x => x.StokAdedi)
                </div>

                <div class="form-group">
                    <b>Total Page :</b>
                    @Html.DisplayFor(x => x.SayfaSayisi)
                </div>

                <div class="form-group">
                    <b>Description :</b>
                    @Html.DisplayFor(x => x.Aciklama)
                </div>

                <div class="form-group">
                    <b>Added Date :</b>
                    @Html.DisplayFor(x => x.EklemeTarihi)
                </div>

                <div class="form-group">
                    <b>Updated Date :</b>
                    @Html.DisplayFor(x => x.GuncellemeTarihi)
                </div>

                <div class="form-group">
                    <b>Is Deleted? :</b>
                    @Html.DisplayFor(x => x.SilindiMi)
                </div>

                <div class="form-group">
                    @Html.ActionLink("Book List", "Index", null,  new { @class = "btn btn-info" })
                </div>

                



            </div>
        </div>
    </div>
</div>
