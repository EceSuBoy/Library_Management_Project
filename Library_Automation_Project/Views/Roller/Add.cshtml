@model Library_Automation.Entities.Model.Roller

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Adding a New Role
            </div>
            <div class="ibox-body">

                @using (Html.BeginForm("Add", "Roller", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <b>Role :</b>
                        @Html.TextBoxFor(x => x.Rol, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Rol, "", new { @class = "text-danger" })
                    </div>

                  
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Add</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


