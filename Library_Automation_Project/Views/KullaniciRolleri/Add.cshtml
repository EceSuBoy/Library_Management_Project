@model Library_Automation.Entities.Model.KullaniciRolleri

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <b>Adding a New Role for @ViewBag.kullaniciAdi</b>
            </div>
            <div class="ibox-body">

                @using (Html.BeginForm("Add", "KullaniciRolleri", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @*<b>User ID :</b>*@
                        @Html.HiddenFor(x => x.KullaniciId, new { @class = "form-control", Value=ViewBag.kullaniciId })
                        @Html.ValidationMessageFor(x => x.KullaniciId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <b>Role ID :</b>
                        @Html.DropDownListFor(x => x.RolId, (SelectList)ViewBag.Liste, "Select One", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.RolId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Add</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>


