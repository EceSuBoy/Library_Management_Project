@model Library_Automation.Entities.Model.KitapTurleri
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Adding a New Book Genre
            </div>
            <div class="ibox-body">
                <form action="Add" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new {@class = "text-danger" })
                    <div class="form-check-group">
                        Book Genre :
                        <input type="text" name="KitapTuru" class="form-control" />
                        @Html.ValidationMessageFor(x=>x.KitapTuru, "", new {@class= "text-danger"})
                    </div>
                    </br>
                    <div class="form-group">
                        Description :
                        <textarea name="Aciklama" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn-success" /> 
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>



