@model List<Library_Automation.Entities.Model.EmanetKitaplar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Deposit Book List
            </div>
            <div class="ibox-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <td>Member</td>
                            <td>Book Name</td>
                            <td>Book Stock</td>
                            <td>Date Borrowed</td>
                            <td>Date Returned</td>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@Html.DisplayFor(x => item.Id)</th>
                                <td>@Html.DisplayFor(x => item.Uyeler.AdiSoyadi)</td>
                                <td>@Html.DisplayFor(x => item.Kitaplar.KitapAdi)</td>
                                <td>@Html.DisplayFor(x => item.KitapSayisi)</td>
                                <td>@Html.DisplayFor(x => item.KitapAldigiTarihi)</td>
                                <td>@Html.DisplayFor(x => item.KitapIadeTarihi)</td>

                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                                    <button class="btn btn-danger btn-sm"
                                            onclick="confirmDelete(@item.Id, '@item.Kitaplar.KitapAdi', '@item.Uyeler.AdiSoyadi',)">
                                        Delete
                                    </button>
                                    <button class="btn btn-primary btn-sm"
                                            onclick="confirmReturn(@item.Id, '@item.Kitaplar.KitapAdi', '@item.Uyeler.AdiSoyadi')">
                                        Return
                                    </button>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
                @Html.Partial("_DeleteConfirmationModal", "Are you sure you want to delete this book?")

            <div class="form-group">
                @Html.ActionLink("New", "DepositBook", null, new { @class = "btn btn-dark" })--- @Html.ActionLink("Excel Aktar", "ExceleAktar", "Istatistikler", null, new { @class = "btn btn-success" }) ---@Html.ActionLink("Print", "Yazdir", null, new { @class = "btn btn-primary" })


            </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmReturnModal" tabindex="-1" role="dialog" aria-labelledby="confirmReturnModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="returnForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="confirmReturnModalLabel">Confirm Return</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="returnModalBody">
                    <!-- JavaScript ile doldurulacak -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Confirm Return</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        function confirmDelete(bookId, bookName, membername) {
            var form = document.getElementById("deleteForm");
            form.action = "/EmanetKitaplar/Delete/" + bookId;

            var message = `Are you sure you want to delete the borrowed book: <strong>${bookName}</strong> to <strong>${membername}</strong>?`;
            document.getElementById("deleteModalBody").innerHTML = message;

            $('#confirmDeleteModal').modal('show');
        }

        function confirmReturn(bookId, bookName, memberName) {
            var form = document.getElementById("returnForm");
            form.action = "/EmanetKitaplar/TeslimAl/" + bookId;

            var message = `Are you sure you want to return the book: <strong>${bookName}</strong> from <strong>${memberName}</strong>?`;
            document.getElementById("returnModalBody").innerHTML = message;

            $('#confirmReturnModal').modal('show');
        }
    </script>
}