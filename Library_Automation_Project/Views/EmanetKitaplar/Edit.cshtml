@model Library_Automation.Entities.Model.EmanetKitaplar

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <b> Editing a Borrowed Book</b>
            </div>
            <div class="ibox-body">

                @using (Html.BeginForm("Edit", "EmanetKitaplar", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <b>Member :</b>
                        @Html.DropDownListFor(x => x.uyeId, (SelectList)ViewBag.UyeListe, "Select One", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.uyeId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <b>Book :</b>
                        @Html.DropDownListFor(x => x.kitapId, (SelectList)ViewBag.KitapListe, "Select One", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.kitapId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <b>Number of Book :</b>
                        @Html.TextBoxFor(x => x.KitapSayisi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.KitapSayisi, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <b>Date Borrowed :</b>
                        @Html.TextBoxFor(x => x.KitapAldigiTarihi, new { @class = "form-control", type = "datetime-local", Value=Model.KitapAldigiTarihi.ToString("yyyy-MM-dd HH:mm") })
                        @Html.ValidationMessageFor(x => x.KitapAldigiTarihi, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Confirm</button>
                    </div>
                }

            </div>
        </div>
    </div>
</div>




